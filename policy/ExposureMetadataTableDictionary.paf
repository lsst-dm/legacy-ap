#<?cfg paf dictionary ?>

target: lsst.ap.match

definitions: {

    # Column indexes 
    exposureIdColumn: {
        type: int 
        description: "0-based index of the exposure id column in the exposure
                      metadata table."
        maxOccurs: 1
        default: 0
    }
    metadataKeyColumn: {
        type: int 
        description: "0-based index of the metadata key column in the exposure
                      metadata table."
        maxOccurs: 1
        default: 2
    }
    intValueColumn: {
        type: int
        description: "0-based index of the integer metadata value column in
                      the exposure metadata table."
        maxOccurs: 1
        default: 3
    }
    doubleValueColumn: {
        type: int
        description: "0-based index of the floating point metadata value column
                      in the exposure metadata table."
        maxOccurs: 1
        default: 4
    }
    stringValueColumn: {
        type: int
        description: "0-based index of the string metadata value column in the
                      exposure metadata table."
        maxOccurs: 1
        default: 5
    }

    # Format related options
    csvDialect: {
        type: policy
        dictionary: @CsvDialectDictionary.paf
        description: "CSV dialect of the exposure metadata table."
        maxOccurs: 1
    }
}

