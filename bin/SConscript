# -*- python -*-
Import('env')

sysLibs = ['z', 'pthread']
if env['PLATFORM'] == 'posix':
    sysLibs += ['rt']

env.Program('ap_shmem_admin', ['../util/SharedMemoryAdmin.cc'], LIBS=env.getlibs('boost wcslib utils daf_base daf_data daf_persistence pex_exceptions pex_logging pex_policy security afw ap') + sysLibs)
env.Program('dumpObjects', ['../util/dumpObjects.cc'], LIBS = env.getlibs('boost mysqlclient utils daf_base daf_persistence pex_exceptions pex_logging pex_policy'))
